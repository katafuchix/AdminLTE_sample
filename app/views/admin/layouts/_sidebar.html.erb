
      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <%= link_to admin_index_path, class:"brand-link" do %>
          <img src="<%= image_path 'AdminLTELogo.png' %>" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
               style="opacity: .8">
          <span class="brand-text font-weight-light">AdminLTE 3</span>
        <% end %>

        <!-- Sidebar -->
        <div class="sidebar">
          <!-- Sidebar user panel (optional) -->

          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="info bg-gray-dark">
              <%= current_admin_user.name %>
            </div>
          </div>

          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
              <!-- Add icons to the links using the .nav-icon class
                   with font-awesome or any other icon font library -->
              <li class="nav-item has-treeview"> <!-- menu-open -->
                <a href="#" class="nav-link"> <!-- active -->
                  <i class="nav-icon fas fa-th"></i>
                  <p>
                    Master
                    <i class="right fas fa-angle-left"></i>
                  </p>
                </a>
                <ul class="nav nav-treeview">
                  <% Master.master_routes.each do |key, value| %>
                    <li class="nav-item">
                      <%= link_to "/admin/" + key, class:"nav-link" do %>
                        <i class="far fa-circle nav-icon"></i>
                        <p><%= value %></p>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </li>
              <!--
              <li class="nav-item">
                <%= link_to admin_index_path, class:"nav-link" do %>
                  <i class="nav-icon fas fa-th"></i>
                  <p>
                    TOP
                  </p>
                <% end %>
              </li>
              -->
              <li class="nav-item">
                <%= link_to edit_admin_app_configs_path, class:"nav-link" do %>
                  <i class="nav-icon fas fa-th"></i>
                  <p>
                    設定
                  </p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_admin_users_path, class:"nav-link" do %>
                  <i class="nav-icon fas fa-th"></i>
                  <p>
                    管理者
                  </p>
                <% end %>
              </li>

            </ul>
          </nav>
          <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
      </aside>

<script>
$(function () {
  var url = window.location;
  //console.log(url);
  $('ul.nav-sidebar a').filter(function() {
        return this.href == url || url.href.indexOf(this.href) == 0;
  }).addClass('active');

  $('ul.nav-sidebar a').filter(function() {
        return this.href == url || url.href.indexOf(this.href) == 0;
  }).parent().parent().parent().addClass('menu-open');
});
</script>
