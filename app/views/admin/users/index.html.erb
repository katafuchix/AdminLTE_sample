<!-- Content Header (Page header) -->

<%
controller_name = controller.controller_name
action = controller.action_name.to_sym
model = Object.const_get('Admin::User')
%>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%=  model.model_name %> <%= model.human_attribute_name(action) %></h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"></li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">

      <!-- /.col-md-6 -->
      <div class="col-lg-12">

        <div class="card">
          <div class="card-header ui-sortable-handle" style="cursor: move;">
                <h3 class="card-title">
                  <i class="ion ion-clipboard mr-1"></i>
                  <%= model.to_s %>
                </h3>
                <%= link_to(I18n.t('helpers.submit.create'),  {action: :index},  class: "btn btn-info float-right" ) %>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="users_example" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th></th>
                  <th><%= model.human_attribute_name :name %></th>
                  <th><%= model.human_attribute_name :email %></th>
                  <th><%= model.human_attribute_name :role %></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %><%= user.user_profile.sex_i18n %></td>
                    <td><%= user.email %></td>
                    <td><%= user.nickname %></td>
                    <td></td>
                    <td></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->

          <div class="card-footer clearfix">
            <%= paginate @users %>
          </div>

        </div>

      </div>
      <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content -->
