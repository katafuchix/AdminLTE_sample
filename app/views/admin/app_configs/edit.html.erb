<!-- Content Header (Page header) -->

<%
controller_name = controller.controller_name
action = controller.action_name.to_sym
model = Object.const_get('AppConfig')
%>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%=  model.model_name %> <%= model.human_attribute_name(action) %></h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Starter Page</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">

      <!-- /.col-md-6 -->
      <div class="col-lg-12">

        <div class="card">
          <!-- /.card-header -->
          <%= @config.model_name.human %>
          <%= model.model_name.human %>
          <%= model.human_attribute_name :android_config_title  %>
          <section class="content">
          <%= form_with(model: @config, method: "patch", :url => {:action => :update} , local: true) do |form| %>

            <div class="card-body">
              <div class="form-group col-sm-6">
                <%= form.label model.human_attribute_name :android_maintenance_message %><!-- <span class="badge badge-danger">必須</span> -->
                <%= form.text_field :android_maintenance_message, class:"form-control", placeholder:"名前を入力してください" %>
              </div>

              <div class="form-group col-sm-6">
                <%= form.label model.human_attribute_name :email %><!-- <span class="badge badge-danger">必須</span> -->
                <%= form.text_field :email, class:"form-control", placeholder:"メールアドレス" %>
              </div>

              <div class="form-group col-sm-6">
                <%= form.label model.human_attribute_name :password %><!-- <span class="badge badge-danger">必須</span> -->
                <%= form.text_field :password, class:"form-control" %>
              </div>

              <div class="form-group col-sm-6">
                <%= form.label model.human_attribute_name :password_confirmation %><!-- <span class="badge badge-danger">必須</span> -->
                <%= form.text_field :password_confirmation, class:"form-control"%>
              </div>

            </div>
            <div class="card-footer">
              <%= form.submit I18n.t('helpers.submit.update') , class:"btn btn-primary" %>

            </div>
          <% end %>
          </section>


          <!-- /.card-body -->
        </div>

      </div>
      <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content -->
